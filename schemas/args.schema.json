{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cerberus://schemas/args.schema.json",
  "title": "Cerberus Job Args",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "topic": {
      "type": "string",
      "minLength": 1
    },
    "n": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 5
    },
    "profile": {
      "type": "string",
      "enum": [
        "baseline",
        "micro_iterations",
        "heavy_verification"
      ]
    },
    "enable_research": {
      "type": "boolean",
      "default": true
    },
    "search_provider": {
      "type": "string",
      "enum": [
        "dummy",
        "serpapi",
        "bing"
      ]
    },
    "search_max": {
      "type": "integer",
      "minimum": 1,
      "maximum": 25,
      "default": 6
    },
    "fetch_max": {
      "type": "integer",
      "minimum": 0,
      "maximum": 25,
      "default": 1
    },
    "fetch_timeout": {
      "type": "number",
      "minimum": 1.0,
      "maximum": 60.0,
      "default": 8.0
    },
    "n_per_claim": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 2
    },
    "style": {
      "type": "string"
    },
    "seed_gov": {
      "type": "integer",
      "default": 42
    },
    "seed_seed": {
      "type": "integer",
      "default": 7
    }
  },
  "required": [
    "topic",
    "n"
  ]
}